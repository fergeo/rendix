doctype html
html
  head
    meta(charset="UTF-8")
    title Mis Cursos
    style.
      body {
        font-family: Arial, sans-serif;
        margin: 0;
        background-color: #f4f4f4;
        padding: 20px;
      }

      header {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }

      h1 {
        color: #333;
      }

      .logout-form {
        margin: 0;
      }

      .logout-form button {
        padding: 8px 12px;
        background-color: #d32f2f;
        color: white;
        border: none;
        border-radius: 5px;
        cursor: pointer;
        font-size: 14px;
      }

      .logout-form button:hover {
        background-color: #b71c1c;
      }

      .cards-container {
        display: flex;
        flex-wrap: wrap;
        gap: 20px;
        justify-content: center;
        margin-top: 30px;
      }

      .card {
        background-color: white;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
        width: 250px;
        transition: transform 0.2s ease;
        position: relative;
      }

      .card:hover {
        transform: scale(1.03);
      }

      .card h2 {
        margin: 0 0 10px;
        font-size: 20px;
        color: #1976d2;
      }

      .card p {
        margin: 5px 0;
        color: #555;
      }

      .card form {
        margin-top: 10px;
      }

      .card button {
        width: 100%;
        padding: 8px;
        background-color: #388e3c;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 14px;
        cursor: pointer;
      }

      .card button:hover {
        background-color: #2e7d32;
      }

      .asistencia-msg {
        color: green;
        font-weight: bold;
        margin-bottom: 8px;
        text-align: center;
      }

  body
    header
      h1 Mis Cursos Inscritos
      form.logout-form(action="/logout" method="POST")
        button(type="submit") Logout

    .cards-container
      if cursos.length
        each curso in cursos
          .card
            h2= curso.nombre
            p Día: #{curso.dia}
            p Horario: #{curso.horario}
            if asistenciaDada
              // Aquí mostramos el mensaje sólo si la query 'asistencia=ok' llegó
              .asistencia-msg Asistencia Dada
            form(action="/student/asistencia" method="POST")
              input(type="hidden" name="cursoId" value=curso.id)
              button(type="submit") Dar Asistencia
      else
        p(style="text-align:center; margin-top: 40px; color: #888;") No estás inscrito en ningún curso.
