doctype html
html
  head
    title Consultar Inscripciones
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    link(rel="stylesheet", href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css")
    style.
      body {
        font-family: Arial, sans-serif;
        padding: 20px;
      }
      table {
        margin-top: 30px;
      }
  body
    .container
      h1.text-center.mb-4 Consultar Inscripciones

      if inscripciones && inscripciones.length > 0
        table.table.table-bordered.table-striped
          thead.table-light
            tr
              th Nombre
              th Apellido
              th DNI
              th Correo
              th Teléfono
              th Dirección
              th Curso
              th Carrera/Curso
              th Día
              th Horario
          tbody
            each inscripcion in inscripciones
              tr
                td= inscripcion.nombre
                td= inscripcion.apellido
                td= inscripcion.dni
                td= inscripcion.correo
                td= inscripcion.telefono
                td= inscripcion.direccion
                td= inscripcion.nombreCurso
                td= inscripcion.carreraCurso
                td= inscripcion.dia
                td= inscripcion.horario
      else
        p.text-center.text-muted No hay inscripciones registradas.

      .text-center.mt-4
        a(href="/admin/inscripciones")
          button.btn.btn-primary(type="button") Volver
